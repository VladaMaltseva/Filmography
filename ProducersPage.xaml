<Page x:Class="filmography.ProducersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:filmography"
      mc:Ignorable="d" 
      d:DesignHeight="768"  d:DesignWidth="1024" 
      Title="ProducersPage" 
      Background="#827397"
      FontSize="25" 
      FontFamily="Century Gothic" 
      Cursor="Hand" Margin="0,0,0,0">

    <Grid VerticalAlignment="Top" Margin="0,20,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="63*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <DataGrid AutoGenerateColumns="False" x:Name="producersGrid" Width="700" HorizontalAlignment="Left" Margin="10,20,0,-324" Height="470" Grid.ColumnSpan="2" Grid.RowSpan="2" VerticalAlignment="Top">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Header="ID" Width="50"/>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="200"/>
                    <DataGridTextColumn Binding="{Binding Date_of_birth}" Header="Date of birth" Width="150"/>
                    <DataGridTextColumn Binding="{Binding Country}" Header="Country" Width="100"/>
                    <DataGridTextColumn Binding="{Binding Id_film}" Header="ID film" Width="100"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Label  HorizontalAlignment="Center" Foreground="White">Producers</Label>
        <Button Grid.Row="1"  Content="Add" Height="40" Width="120" Background="#4D4C7D" FontSize="18" BorderBrush="#4D4C7D" HorizontalAlignment="Left" Cursor="Hand" Margin="61,190,0,-230" Click="Button_Click_AddingForm"/>
        <Button Grid.Row="1"  Content="Edit" Height="40" Width="120" Background="#4D4C7D" FontSize="18" BorderBrush="#4D4C7D" HorizontalAlignment="Left" Cursor="Hand" Margin="221,190,0,-230" Click="Button_Click_EditingForm"/>
        <Button Grid.Row="1"  Content="Delete" Height="40" Width="120" Background="#4D4C7D" FontSize="18" BorderBrush="#4D4C7D" HorizontalAlignment="Left" Cursor="Hand" Margin="381,190,0,-230" Click="Button_Click_DeletingForm"/>

        <Canvas Background="White" Width="280" Height="300" Margin="714,60,20,20" Grid.RowSpan="2" Visibility="Hidden" x:Name="AddingForm" VerticalAlignment="Top">
            <Label   FontSize="18" HorizontalAlignment="Left" Canvas.Left="104" Canvas.Top="10">Adding</Label>
            <Label   FontSize="18" HorizontalAlignment="Left" Canvas.Left="10" Canvas.Top="60">Name</Label>
            <Label   FontSize="18" HorizontalAlignment="Center" Canvas.Left="10" Canvas.Top="100" VerticalAlignment="Top">Date of birth</Label>
            <Label   FontSize="18" HorizontalAlignment="Left" Canvas.Left="10" Canvas.Top="140">Country</Label>
            <Label   FontSize="18" HorizontalAlignment="Left" Canvas.Left="10" Canvas.Top="180">Film's name</Label>
            <TextBox x:Name="addName" Height="27" Canvas.Left="90" TextWrapping="Wrap" Text="" FontSize="16" Canvas.Top="60" Width="177" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <DatePicker x:Name="addDate" Canvas.Left="130" Canvas.Top="100" HorizontalAlignment="Left" FontSize="16" Width="137"/>
            <TextBox x:Name="addCountry" Height="27" Canvas.Left="90" TextWrapping="Wrap" Text="" FontSize="16" Canvas.Top="140" Width="177" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <ComboBox x:Name="addNameFilm" Canvas.Left="140" Canvas.Top="170" Width="120" VerticalAlignment="Top" FontSize="18"/>
            <Button Content="Add" Height="40" Width="120" Background="#B1BCE6" FontSize="18" BorderBrush="#B1BCE6" Canvas.Left="150" Canvas.Top="233" Click="Button_Click_Adding" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <Button Content="Cancel" Height="40" Width="120" Background="#9A86A4" FontSize="18" BorderBrush="#9A86A4" Canvas.Left="10" Canvas.Top="233" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click_Cancel"/>
        </Canvas>

    </Grid>
</Page>

